<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>Hello</servlet-name>
        <servlet-class>com.cyberha4.controllers.HelloServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Hello</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>com.cyberha4.controllers.RegistrationServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>listTasks</servlet-name>
        <servlet-class>com.cyberha4.controllers.ListTasksServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>listTasks</servlet-name>
        <url-pattern>/listtasks</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.cyberha4.controllers.LoginServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>edittask</servlet-name>
        <servlet-class>com.cyberha4.controllers.EditTaskServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>edittask</servlet-name>
        <url-pattern>/edittask</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.cyberha4.controllers.LogoutServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>com.cyberha4.controllers.listners.ApplicationLoadListner</listener-class>
    </listener>

    <listener>
        <listener-class>com.cyberha4.controllers.listners.SessionListener</listener-class>
    </listener>

    <welcome-file-list>
        <welcome-file>welcome.jsp</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>AvailableFilter</filter-name>
        <filter-class>com.cyberha4.controllers.filters.AvailableFilter</filter-class>
        <init-param>
            <param-name>freeRouts</param-name>
            <param-value>welcome.jsp;error.jsp</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>AvailableFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>EditOwnTaskFilter</filter-name>
        <filter-class>com.cyberha4.controllers.filters.EditOwnTaskFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>EditOwnTaskFilter</filter-name>
        <url-pattern>/edittask</url-pattern>
    </filter-mapping>

    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/TEST</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>


</web-app>